<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#212121">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="300dp"
            android:layout_weight="4.5"
            app:cardCornerRadius="5dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/txt_BtmSheet_LocationName"
                    android:layout_weight="0"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Name"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/img_BtmSheet"
                    android:src="@drawable/buttoncmt"
                    android:layout_weight="10"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:padding="3dp"
                    android:scaleType="fitXY"
                    android:layout_marginBottom="8dp"/>
                <RatingBar
                    android:id="@+id/rB_BtmSheet_Star"
                    android:layout_gravity="center"
                    style="@style/RatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:progressTint="#FFD600"
                    android:rating="3.5" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/btnSheet_Direction"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:background="#2196F3"
                        android:layout_margin="3dp"
                        android:text="@string/Direction"
                        android:layout_height="match_parent" />
                    <Button
                        android:id="@+id/btnSheet_Information"
                        android:text="@string/Information"
                        android:background="#2196F3"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <ScrollView
            android:layout_weight="5"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:id="@+id/txt_BtmSheet"
                android:padding="5dp"
                android:background="#FFFDE7"
                android:textSize="20dp"
                android:textColor="#212121"
                android:text="basic information ............"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </ScrollView>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>