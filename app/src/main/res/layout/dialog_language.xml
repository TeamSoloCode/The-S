<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:layout_weight="5"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtVietnamese"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:text="@string/Vietnamese"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageButton
                android:id="@+id/ImgBtnVietnamese"
                android:background="@drawable/vietnamese"
                android:layout_width="150dp"
                android:layout_height="100dp" />
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="5"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtEnglish"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:text="@string/English"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageButton
                android:id="@+id/ImgbtnEnglish"
                android:background="@drawable/america"
                android:layout_width="150dp"
                android:layout_height="100dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>